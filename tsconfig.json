{
    "compilerOptions": {
        "outDir": "app",
        "rootDir": "app",
        "module": "commonjs",
        "target": "es5",
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./node_modules/tns-core-modules/**/*.ts",
        "./node_modules/nativescript-telerik-ui/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}